// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Ability {
  id Int @id @default(autoincrement())
  name String @unique
  tier Int @default(1)
  cost Int @default(1)
  ranks Int @default(1)
  prerequisite String?
  description String
}
